<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="vendor/autoload.php"
>
    <testsuites>
        <testsuite name="SkuVault Tests">
            <directory>./tests/.</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="SKUVAULT_TESTING" value="false"/>
        <env name="SKUVAULT_URL" value="" />
        <env name="SKUVAULT_TENANT_TOKEN" value="" />
        <env name="SKUVAULT_USER_TOKEN" value="" />
        <env name="SKUVAULT_PRIVATE_URL" value="" />
        <env name="SKUVAULT_USERNAME" value="" />
        <env name="SKUVAULT_PASSWORD" value="" />
    </php>
</phpunit>
